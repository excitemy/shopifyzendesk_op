{% if customer %}
<script type="text/javascript">
  console.log("User Logged In");

  var customerId = {{ customer.id }};
  var WebAppName = "shopifyzendeskop"; // !!!Replace with your main web app name!!!

  // Fetch Zendesk JWT token for the current user
  async function fetchZendeskJWT() {
    try {
      const response = await fetch('https://' + WebAppName + '.azurewebsites.net/appem/auth/' + customerId);
      if (!response.ok) {
        throw new Error(`Failed to fetch JWT: ${response.statusText}`);
      }
      const data = await response.json();
      const jwttoken = data.jwt;

      // Authenticate Zendesk messenger
      zE('messenger', 'loginUser', function (callback) {
        callback(jwttoken);
      });

    } catch (error) {
      console.error('Error fetching JWT:', error);
    }
  }

  fetchZendeskJWT();

  // Redirect user to the Zendesk help center
  async function redirectToZendeskHelpCenter() {
    try {
      const response = await fetch('https://' + WebAppName + '.azurewebsites.net/appsso/auth/' + customerId);
      if (!response.ok) {
        throw new Error(`Failed to fetch redirect URL: ${response.statusText}`);
      }
      const data = await response.json();
      const redirectUrl = data.redirect_url; // corrected
      window.location.href = redirectUrl;
    } catch (error) {
      console.error('Error fetching redirect URL:', error);
    }
  }

  redirectToZendeskHelpCenter();

</script>
{% else %}
<script>
  console.log("user logged out");
  zE('messenger', 'logoutUser');
</script>
{% endif %}
